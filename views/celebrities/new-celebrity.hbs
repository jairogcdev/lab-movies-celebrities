<div class="d-flex flex-column align-items-center">
  <h3>Formulario para crear celebrities</h3>

  <form method="post" action="/celebrities/create">
    <div class="mb-3">
      <label class="form-label" for="name">Nombre</label>
      <input class="form-control" type="text" name="name" />
    </div>
    {{! El name del input debería ser igual a la propiedad del documento del modelo }}
    <div class="mb-3">
      <label class="form-label" for="ocupation">Ocupación</label>
      <input class="form-control" type="text" name="ocupation" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="catchPhrase">Eslogan</label>
      <input class="form-control" type="text" name="catchPhrase" />
    </div>
    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-primary">Agregar</button>
    </div>
  </form>
</div>